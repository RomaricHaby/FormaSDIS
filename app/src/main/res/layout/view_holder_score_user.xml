<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/shape_view_holder_question_add"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/titleQuizScoreUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_extra_bold"
        android:maxLines="3"
        android:text="TextView"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_result_view_holder2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:maxLines="3"
        android:text="Code de partage :"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_result_view_holder3" />

    <TextView
        android:id="@+id/title_result_view_holder3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:maxLines="3"
        android:text="Score :"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleQuizScoreUser" />

    <TextView
        android:id="@+id/scoreQuizScoreUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/title_result_view_holder3"
        app:layout_constraintStart_toEndOf="@+id/title_result_view_holder3"
        app:layout_constraintTop_toTopOf="@+id/title_result_view_holder3" />

    <TextView
        android:id="@+id/idQuizScoreUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/title_result_view_holder2"
        app:layout_constraintStart_toEndOf="@+id/title_result_view_holder2"
        app:layout_constraintTop_toTopOf="@+id/title_result_view_holder2" />

</androidx.constraintlayout.widget.ConstraintLayout>